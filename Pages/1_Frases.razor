@page "/Frases"
<h3>Analizador de Frases</h3>

<EditForm Model="f"  OnValidSubmit="@AnalizadorFrase">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <InputText id="frase" class="form-control" placeholder="Escriba la frase o oración..." @bind-Value="f.frase"/>
    </div>
    <button type="submit" class="btn btn-success"><i class="oi oi-plus"></i>  Analizar</button>
</EditForm>
<br />
<p>La frase analizada es: @f.frase</p>
<p>Catidad de Vocales: @vocales</p>
<p>Catidad de Consonantes: @consonantes</p>
<p>Catidad de Espacios: @espacios</p>

@code {
    private int i;
    private char cont;
    Frase f = new Frase();
    private int vocales = 0;
    private int consonantes = 0;
    private int espacios = 0;

    private void AnalizadorFrase()
    {
        vocales = 0;
        consonantes = 0;
        espacios = 0;
        for (i = 0; i < f.frase.Length; i++)
        {
            cont = f.frase[i];
            int c = char.ToLower(cont);
            if (c == 'a' | c == 'e' | c == 'i' | c == 'o' | c == 'u')
            {
                vocales++;
            }
            else if (c == 'b' | c == 'c' | c == 'd' | c == 'f' | c == 'g' | c == 'h' | c == 'j' | c == 'k' | c == 'l' | c == 'm' |
                    c == 'n' | c == 'ñ' | c == 'p' | c == 'q' | c == 'r' | c == 's' | c == 't' | c == 'v' | c == 'w' | c == 'x' |
                    c == 'y' | c == 'z')
            {
                consonantes++;
            }
            else if (c == ' ')
            {
                espacios++;
            }
        }

    }
}
